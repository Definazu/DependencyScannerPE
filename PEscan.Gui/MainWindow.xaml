<Window x:Class="PEscan.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PEscan - GUI" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBox x:Name="PathBox" Width="450" Margin="0,0,5,0"/>
                <Button Content="Choose File" Width="100" Margin="0,0,5,0" Click="OnChooseFile"/>
                <Button Content="Choose Directory" Width="120" Margin="0,0,5,0" Click="OnChooseDirectory"/>
                <CheckBox x:Name="FilteredCheck" Content="Filtered (skip system DLLs)" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Formats:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <CheckBox x:Name="FormatJson" Content="JSON" IsChecked="True" Margin="0,0,5,0"/>
                <CheckBox x:Name="FormatTxt" Content="TXT" IsChecked="True" Margin="0,0,5,0"/>
                <CheckBox x:Name="FormatCsv" Content="CSV" IsChecked="True" Margin="0,0,5,0"/>
                <CheckBox x:Name="FormatDot" Content="DOT" IsChecked="True" Margin="0,0,5,0"/>
                <Button x:Name="AnalyzeButton" Content="Analyze" Width="100" Click="OnAnalyze"/>
                <TextBlock x:Name="StatusText" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <TabControl x:Name="GraphsTab" Grid.Row="1">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,5">
                            <Button Content="Save JSON" Margin="0,0,5,0" Click="OnSaveJson"/>
                            <Button Content="Save TXT" Margin="0,0,5,0" Click="OnSaveTxt"/>
                            <Button Content="Save CSV" Margin="0,0,5,0" Click="OnSaveCsv"/>
                            <Button Content="Save DOT" Margin="0,0,5,0" Click="OnSaveDot"/>
                        </StackPanel>
                        <TreeView ItemsSource="{Binding Nodes}">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} ({1})">
                                                <Binding Path="Name"/>
                                                <Binding Path="Path"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </DockPanel>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <TextBlock Grid.Row="2" Text="Tip: use --filtered to skip system DLL recursion." Foreground="Gray"/>
    </Grid>
</Window>

